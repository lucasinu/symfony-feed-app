{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>External_id</th>
                <td>{{ product.externalId }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ product.sku }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ product.link }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ product.rating }}</td>
            </tr>
            <tr>
                <th>Count</th>
                <td>{{ product.count }}</td>
            </tr>
            <tr>
                <th>Caffeine_type</th>
                <td>{{ product.caffeineType }}</td>
            </tr>
            <tr>
                <th>Flavored</th>
                <td>{{ product.flavored ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Seasonal</th>
                <td>{{ product.seasonal ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>In_stock</th>
                <td>{{ product.inStock ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ product.facebook ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_k_cup</th>
                <td>{{ product.isKCup ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Short_description</th>
                <td>{{ product.shortDescription }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Brand_id</th>
                <td>{{ product.brandId }}</td>
            </tr>
            <tr>
                <th>Category_id</th>
                <td>{{ product.categoryId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
